import java.util.Scanner;
public class Lab02_2 {

	public static void main(String[] args) {
		Scanner in= new Scanner(System.in);
		int height=0;
		
		System.out.print("Enter the height : ");
		height=in.nextInt();
		
		for(int i=1;i<=height;i++)
		{
			for(int j=0; j<i;j++)
				System.out.print("*");
			
			for(int k=height;k<0;k-=2)
				System.out.print(" ");
			
			for(int j=0; j<i-1;j++)
				System.out.print("*");
			
			System.out.println();
		}

	}

}
